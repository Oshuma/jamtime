<% content_for :sidebar, render(:partial => 'sidebar') -%>

<div class="block">
  <div class="content">
    <h2 class="title">
      <%=h @artist.name %>
      <span>- <%= link_to 'Artists', artists_path %></span>
    </h2>

    <% if admin? %>
      <div class="inner admin-buttons">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_artist_path(@artist), :class => "button" %>
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} Delete", artist_path(@artist), :method => "delete", :class => "button", :confirm => "Are you sure?" %>
      </div>
    <% end %>

    <div class="inner">
      <ul class="list">
        <% @songs.each do |song| %>
          <div class="song">
            <%= link_to(image_tag('layout/icons/add.png'), '#') %>
            <%= link_to(image_tag('layout/icons/down_arrow.png'), download_path(song)) %>
            <abbr title="<%= song.path %>"><%= h(song.title) %></abbr>
          </div>
        <% end %>
      </ul>
    </div>

    <div class="inner">
      <ul class="list">
        <% @artist.albums.each do |album| %>
          <li><%= link_to h(album.name), artist_album_path(@artist, album) %></li>
        <% end %>
      </ul>
    </div>

  </div><%# end .content %>
</div><%# end .block %>
